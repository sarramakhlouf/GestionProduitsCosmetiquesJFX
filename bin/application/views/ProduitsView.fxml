<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ProduitController"
            prefWidth="700" prefHeight="600" style="-fx-padding: 20; -fx-background-color: #ffffff;">

    <Label text="Gestion des Produits" layoutX="250" layoutY="10"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <TableView fx:id="produitTable" layoutX="25" layoutY="50" prefHeight="200" prefWidth="650">
        <columns>
            <TableColumn fx:id="nomColumn" text="Nom"/>
            <TableColumn fx:id="descriptionColumn" text="Description"/>
            <TableColumn fx:id="prixColumn" text="Prix"/>
            <TableColumn fx:id="stockColumn" text="Stock"/>
            <TableColumn fx:id="categorieColumn" text="Catégorie"/>
        </columns>
    </TableView>

    <Label text="Nom:" layoutX="30" layoutY="270"/>
    <TextField fx:id="nomField" layoutX="120" layoutY="265"/>

    <Label text="Description:" layoutX="30" layoutY="310"/>
    <TextField fx:id="descriptionField" layoutX="120" layoutY="305"/>

    <Label text="Prix:" layoutX="30" layoutY="350"/>
    <TextField fx:id="prixField" layoutX="120" layoutY="345"/>

    <Label text="Stock:" layoutX="30" layoutY="390"/>
    <TextField fx:id="stockField" layoutX="120" layoutY="385"/>

    <Label text="Catégorie:" layoutX="30" layoutY="430"/>
    <ChoiceBox fx:id="categorieChoice" layoutX="120" layoutY="425"/>

    <Button text="Ajouter" onAction="#handleAjouter" layoutX="120" layoutY="470"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    <Button text="Modifier" onAction="#handleModifier" layoutX="220" layoutY="470"
            style="-fx-background-color: #FFC107; -fx-text-fill: black;"/>
    <Button text="Supprimer" onAction="#handleSupprimer" layoutX="320" layoutY="470"
            style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    <Button text="Réinitialiser" onAction="#handleReset" layoutX="440" layoutY="470"/>

</AnchorPane>