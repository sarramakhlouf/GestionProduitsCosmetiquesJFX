<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.SignUpController"
          alignment="center" hgap="10" vgap="10" style="-fx-padding: 30; -fx-background-color: #fdfdfd;">

    <Label text="Créer un compte" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <Label text="Nom" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nomField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Prénom" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="prenomField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Email" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Mot de passe" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Rôle" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="roleChoice" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Button text="S'inscrire" onAction="#handleSignUp" GridPane.rowIndex="6" GridPane.columnIndex="1" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
</GridPane>